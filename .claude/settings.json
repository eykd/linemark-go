{
  "permissions": {
    "allow": [
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Skill(commit)",
      "Bash(git commit:*)",
      "Bash(brew list:*)",
      "Bash(./bin/lmk:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pre-tool-use-bash.sh"
          }
        ]
      }
    ]
  }
}
